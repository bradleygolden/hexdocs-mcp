{
  "name": "hexdocs-mcp",
  "version": "0.2.0-rc.1",
  "description": "MCP server for searching Hex package documentation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "hexdocs-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
